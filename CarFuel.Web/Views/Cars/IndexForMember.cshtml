@using AppModels = CarFuel.Models
@model IEnumerable<AppModels.Car>

@{ 
	var appUser = (AppModels.User)ViewBag.AppUser;
}
<h2>My Cars</h2>

@foreach (var c in Model)
{
	<a href="~/Cars/AddFillUp/@c.Id"
	   class="car-name btn btn-info btn-lg">
		@c.Name
	</a>
}


<a href="~/Cars/Add"
   class="btn btn-default btn-lg">
	<span class="glyphicon glyphicon-plus"></span>
</a>

<div class="well well-sm">
	@appUser.DisplayName<br />
	@appUser.ConsumptionRate.ToString()<br />
	<span id="total">Total @Model.Count() cars.</span>
</div>